    \setmathfont[
      Numbers=Tabular,
      range=it/{latin,Latin,greek,Greek}
    ]{Avenir Next Italic}
    \setmathfont[
      Numbers=Tabular,
      range=bfup/{latin,Latin,num,greek,Greek}
    ]{Avenir Next Demi Bold}
    \setmathfont[
      Numbers=Tabular,
      range=bfit/{latin,Latin,greek,Greek}
    ]{Avenir Next Demi Bold Italic}

    \newfontfamily\cronoheaderfont{Avgardm.ttf}
}{\relax}

